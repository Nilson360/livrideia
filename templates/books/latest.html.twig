{% extends 'base.html.twig' %}

{% block title %}Livres de la semaine{% endblock %}

{% block main_content %}
    <div class="w-full max-w-4xl mx-auto bg-white shadow rounded-lg p-6 mt-6 mb-12">
        <h1 class="text-2xl font-bold text-orange-500 mb-4">Derniers lancements</h1>
        <p class="text-gray-700 mb-6">Voici les livres mis en avant cette semaine :</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {% for book in books %}
                <div class="flex gap-4">
                    <img src="{{ asset(book.coverPath|default('/images/default.png')) }}"
                         alt="Couverture de {{ book.title }}"
                         class="w-16 h-24 object-cover rounded shadow-sm">
                    <div>
                        <h2 class="text-green-600 font-semibold text-base hover:underline">
                            <a href="{{ path('book_show', {id: book.id}) }}">{{ book.title }}</a>
                        </h2>
                        <p class="text-sm text-gray-500">{{ book.author }}</p>
                        <p class="text-xs text-gray-400 mt-1">Ajouté le {{ book.createdAt|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500">Aucun livre sélectionné cette semaine.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
