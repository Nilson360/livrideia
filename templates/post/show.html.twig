{% extends 'base.html.twig' %}

{% block title %}Publication de {{ post.user.fullName }}{% endblock %}

{% block main_content %}
    <div class="w-full flex justify-center px-4">
        <div class="w-full max-w-2xl bg-white shadow rounded-xl mt-10 mb-16 p-6 sm:p-8">

            <!-- Header -->
            <div class="mb-6">
                <h1 class="text-2xl font-bold text-gray-800 mb-2">Publication</h1>
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                    <p class="text-sm text-gray-600">
                        Par
                        <a href="{{ path('dashboard_user_profile_other', {id: post.user.id}) }}"
                           class="text-green-600 hover:underline font-semibold">
                            {{ post.user.fullName }}
                        </a>
                    </p>
                    <p class="text-xs text-gray-400 mt-1 sm:mt-0">{{ post.createdAt|date('d/m/Y H:i') }}</p>
                </div>
            </div>

            <!-- Contenu du post -->
            <div class="mb-6 text-gray-800 text-base leading-relaxed">
                {{ post.content }}
            </div>

            <!-- Likes -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
                <span class="text-sm text-gray-500">{{ post.likes|length }} J’aime</span>
                <form method="post" action="{{ path('app_post_like', {id: post.id}) }}">
                    <button type="submit"
                            class="inline-block bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded text-sm shadow transition">
                        J’aime
                    </button>
                </form>
            </div>

            <hr class="my-6">

            <!-- Commentaires -->
            <div>
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Commentaires ({{ post.comments|length }})</h2>
                <ul class="space-y-4 mb-6">
                    {% for comment in post.comments %}
                        <li class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                            <p class="text-sm text-gray-700 mb-1">
                                <a href="{{ path('dashboard_user_profile_other', {id: comment.user.id}) }}"
                                   class="text-green-600 hover:underline font-semibold">
                                    {{ comment.user.fullName }}
                                </a>
                                : {{ comment.content }}
                            </p>
                            <p class="text-xs text-gray-400">{{ comment.createdAt|date('d/m/Y H:i') }}</p>
                        </li>
                    {% else %}
                        <p class="text-sm text-gray-500 italic">Aucun commentaire pour le moment.</p>
                    {% endfor %}
                </ul>

                <!-- Formulaire de commentaire -->
                <form method="post" action="{{ path('app_post_comment', {id: post.id}) }}">
                    <textarea name="content"
                              class="w-full border border-gray-300 rounded-lg p-3 text-sm resize-none focus:ring-2 focus:ring-green-500"
                              rows="3"
                              placeholder="Écrire un commentaire..."></textarea>
                    <button type="submit"
                            class="mt-3 bg-green-500 hover:bg-green-600 text-white px-5 py-2 rounded text-sm transition">
                        Commenter
                    </button>
                </form>
            </div>

        </div>
    </div>
{% endblock %}
