{% extends 'home/desktop/base_desktop.html.twig' %}

{% block title %}{{ config.title }} - Livridea{% endblock %}

{% block content %}
    <div class="min-h-screen bg-gray-50">
        <!-- En-tête de section -->
        <div class="bg-gradient-to-r from-[#FF8A00] to-[#e67300] text-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
                <div class="text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 rounded-2xl mb-6">
                        {% if config.icon == 'calendar' %}
                            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                            </svg>
                        {% elseif config.icon == 'mail' %}
                            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                        {% elseif config.icon == 'lightbulb' %}
                            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        {% else %}
                            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                            </svg>
                        {% endif %}
                    </div>
                    <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ config.title }}</h1>
                    <p class="text-xl text-emerald-100 mb-2">{{ config.subtitle }}</p>
                    <p class="text-emerald-200 max-w-2xl mx-auto">{{ config.description }}</p>
                </div>
            </div>
        </div>

        <!-- Navigation des sections -->
        <div class="bg-white border-b border-gray-200 sticky top-0 z-10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <nav class="flex space-x-8 overflow-x-auto py-4">
                    <a href="{{ path('app_books_section', {section: 'semaine'}) }}"
                       class="flex items-center px-4 py-2 rounded-lg font-medium transition-all duration-200 whitespace-nowrap
                              {% if section == 'semaine' %}bg-emerald-100 text-emerald-700{% else %}text-gray-600 hover:text-emerald-600 hover:bg-emerald-50{% endif %}">
                        <svg class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                        Semaine
                    </a>
                    <a href="{{ path('app_books_section', {section: 'suggestions'}) }}"
                       class="flex items-center px-4 py-2 rounded-lg font-medium transition-all duration-200 whitespace-nowrap
                              {% if section == 'suggestions' %}bg-emerald-100 text-emerald-700{% else %}text-gray-600 hover:text-emerald-600 hover:bg-emerald-50{% endif %}">
                        <svg class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        Suggestions
                    </a>
                    <a href="{{ path('app_books_section', {section: 'sorties'}) }}"
                       class="flex items-center px-4 py-2 rounded-lg font-medium transition-all duration-200 whitespace-nowrap
                              {% if section == 'sorties' %}bg-emerald-100 text-emerald-700{% else %}text-gray-600 hover:text-emerald-600 hover:bg-emerald-50{% endif %}">
                        <svg class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z" clip-rule="evenodd"/>
                        </svg>
                        Nouveautés
                    </a>
                    <a href="{{ path('app_books_section', {section: 'newsletter-history'}) }}"
                       class="flex items-center px-4 py-2 rounded-lg font-medium transition-all duration-200 whitespace-nowrap
                              {% if section == 'newsletter-history' %}bg-emerald-100 text-emerald-700{% else %}text-gray-600 hover:text-emerald-600 hover:bg-emerald-50{% endif %}">
                        <svg class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                        </svg>
                        Newsletter
                    </a>
                </nav>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            {% if books is empty %}
                <!-- État vide -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M4 4v5h.835l.97-2.91A1 1 0 016.72 5.5h2.56a1 1 0 01.915.59l.97 2.91H16V4a1 1 0 011-1h2a1 1 0 011 1v16a1 1 0 01-1 1H6a1 1 0 01-1-1V4z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Aucun livre disponible</h3>
                    <p class="text-gray-500">Cette section sera bientôt remplie de recommandations.</p>
                </div>
            {% else %}
                <!-- Grille de livres -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {% for book in books %}
                        <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group">
                            <div class="relative">
                                <img src="{{asset(book.coverFileName|default('uploads/books/default.png')) }}"
                                     alt="{{ book.title }}"
                                     class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300">
                                <div class="absolute top-4 right-4">
                                    <span class="bg-white/90 backdrop-blur-sm text-gray-700 px-2 py-1 rounded-full text-xs font-medium">
                                        {{ book.category }}
                                    </span>
                                </div>
                                {% if book.rating %}
                                    <div class="absolute bottom-4 left-4 flex items-center bg-white/90 backdrop-blur-sm rounded-full px-2 py-1">
                                        <svg class="w-4 h-4 text-yellow-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                        </svg>
                                        <span class="text-sm font-medium text-gray-700">{{ book.rating }}</span>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="p-6">
                                <h3 class="font-bold text-gray-900 text-lg mb-2 line-clamp-2 group-hover:text-emerald-600 transition-colors">
                                    {{ book.title }}
                                </h3>
                                <p class="text-emerald-600 font-medium mb-3">{{ book.author }}</p>
                                <p class="text-gray-600 text-sm line-clamp-3 mb-4">{{ book.description }}</p>

                                <div class="flex items-center justify-between">
                                    <a href="{{ path('app_book_detail', {id: book.id}) }}"
                                       class="bg-emerald-500 hover:bg-emerald-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 hover:scale-105 flex items-center">
                                        Découvrir
                                        <svg class="w-4 h-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
{% endblock %}