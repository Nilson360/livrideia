{% extends 'base.mobile.html.twig' %}

{% block title %}Accueil — Livridea{% endblock %}

{% block content %}
    <div class="p-3">
        {# Liste des publications #}
        <div class="space-y-6">
            {% for post in posts %}
                <div class="mb-4 pb-4 border-b border-gray-200">
                    {# En-tête de post avec photo de profil et nom #}
                    <div class="flex items-start mb-2">
                        <img src="{{ asset(post.user.avatarPath|default('/images/default-profile.png')) }}"
                             alt="{{ post.user.username }}"
                             class="w-10 h-10 rounded-full mr-3">
                        <div>
                            <p class="font-bold">{{ post.user.fullName }}</p>
                            <p class="text-gray-500 text-sm">{{ post.createdAt|date('d/m/Y') }}
                                - {{ post.createdAt|date('H:i') }}</p>
                        </div>
                    </div>

                    {# Contenu du post #}
                    <p class="mb-3">{{ post.content }}</p>

                    {# Image du post si présente #}
                    {% if post.imagePath %}
                        <div class="mb-3 border rounded-lg overflow-hidden">
                            <img src="{{ asset('uploads/' ~ post.imagePath) }}"
                                 alt="Image de publication"
                                 class="w-full">
                        </div>
                    {% endif %}

                    {# Actions sur le post #}
                    <div class="flex justify-between mt-2 text-gray-500 text-sm">
                        <button class="flex items-center">
                            <svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                            </svg>
                            <span>{{ post.likes|length }}</span>
                        </button>

                        <button class="flex items-center">
                            <svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
                            </svg>
                            <span>{{ post.comments|length }} comments</span>
                        </button>

                        <button class="flex items-center">
                            <svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/>
                            </svg>
                            <span>Share</span>
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}