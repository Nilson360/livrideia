<div class="mb-4 mx-2">
    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
        <div class="p-3">
            {{ form_start(form) }}

            <div class="flex items-start mb-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[#FF8A00] to-[#e67300] flex items-center justify-center mr-3 shadow-md flex-shrink-0">
                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    {{ form_widget(form.content, {
                        'attr': {
                            'placeholder': 'Partagez une citation, un extrait...',
                            'class': 'w-full focus:outline-none resize-none text-gray-700 placeholder-gray-400 text-sm leading-relaxed',
                            'rows': 4
                        }
                    }) }}
                </div>
            </div>

            {{ form_widget(form.imageFile, {
                'attr': {
                    'class': 'hidden',
                    'accept': 'image/*',
                    'id': 'mobile-image-input'
                }
            }) }}

            <div class="flex justify-between items-center pt-2 border-t border-gray-100">
                <div class="flex items-center space-x-3">
                    <label for="mobile-image-input" class="flex items-center text-gray-500 active:text-[#FF8A00] transition-colors cursor-pointer">
                        <div class="p-2 rounded-lg bg-gray-50 active:bg-orange-50 transition-colors">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                        </div>
                    </label>
                    <button type="button" class="flex items-center text-gray-500 active:text-emerald-600 transition-colors">
                        <div class="p-2 rounded-lg bg-gray-50 active:bg-emerald-50 transition-colors">
                            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                        </div>
                    </button>
                </div>
                <button type="submit" class="bg-gradient-to-r from-[#FF8A00] to-[#e67300] text-white rounded-full px-5 py-2 text-sm font-semibold shadow-md active:scale-95 transition-transform min-h-[44px] min-w-[44px] flex items-center">
                    <svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                    </svg>
                    Publier
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Upload de imagem mobile
        const imageInput = document.getElementById('mobile-image-input');
        if (imageInput) {
            imageInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        // Criar preview da imagem
                        let preview = document.querySelector('.mobile-image-preview');
                        if (!preview) {
                            preview = document.createElement('div');
                            preview.className = 'mobile-image-preview mt-3 border-t border-gray-100 pt-3';
                            imageInput.closest('.p-3').appendChild(preview);
                        }

                        preview.innerHTML = `
                        <div class="relative inline-block">
                            <img src="${e.target.result}" alt="Preview" class="max-h-40 rounded-lg border border-gray-200 shadow-sm object-cover">
                            <button type="button" class="remove-mobile-image absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 text-xs hover:bg-red-600 transition-colors flex items-center justify-center">×</button>
                        </div>
                    `;

                        // Botão para remover imagem
                        preview.querySelector('.remove-mobile-image').addEventListener('click', function() {
                            imageInput.value = '';
                            preview.remove();
                        });
                    };
                    reader.readAsDataURL(file);
                }
            });
        }
    });
</script>