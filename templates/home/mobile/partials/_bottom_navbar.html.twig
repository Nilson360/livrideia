{# Script pour interactions et animations #}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Feedback tactile pour mobile
        if (navigator.vibrate) {
            document.querySelectorAll('nav a, nav button').forEach(element => {
                element.addEventListener('click', () => {
                    navigator.vibrate(30);
                });
            });
        }

        // Animation de l'indicateur lors du changement de page
        const navLinks = document.querySelectorAll('nav a');
        const indicator = document.querySelector('.nav-indicator');

        navLinks.forEach((link, index) => {
            // Ignorer le bouton central (index 2)
            if (index === 2) return;

            link.addEventListener('click', function() {
                // Calculer la position en fonction de l'index (en excluant le bouton central)
                let position = index;
                if (index > 2) position--; // Ajuster pour le bouton central

                const newPosition = position * 20;
                indicator.style.marginLeft = `${newPosition}%`;
            });
        });
    });

