<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Livridea - Interface Mobile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .backdrop-blur-md {
            backdrop-filter: blur(12px);
        }

        .shadow-glow {
            box-shadow: 0 0 20px rgba(255, 138, 0, 0.3);
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">

{# Header premium avec logo et design moderne #}
{% include 'home/mobile/partials/_header.html.twig' %}

{# Contenu principal avec espacement optimisé #}
<div class="flex-grow pb-20 pt-2">
    {% block content %}{% endblock %}
</div>

{# Barre de navigation du bas améliorée #}
{% include 'home/mobile/partials/_bottom_navbar.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('nav a');
            const currentPath = window.location.pathname;

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.remove('text-gray-400');
                    link.classList.add('text-[#FF8A00]');
                }
            });
        });
    </script>
{% endblock %}
</body>
</html>