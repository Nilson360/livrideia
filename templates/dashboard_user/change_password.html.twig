{% extends 'home/base_home.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 px-4 py-6 bg-parchment border border-bookmark shadow rounded-xl">
        <h1 class="text-3xl font-bold text-leather italic mb-4">Changer de mot de passe</h1>
        <p class="text-ink mb-6 text-sm leading-relaxed">
            Pour renforcer la sécurité de votre compte, veuillez choisir un mot de passe fort et unique.
        </p>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.oldPassword, 'Ancien mot de passe', {
                'label_attr': {'class': 'block text-leather font-semibold text-sm mb-1'}
            }) }}
            {{ form_widget(form.oldPassword, {
                'attr': {
                    'class': 'w-full border border-bookmark rounded-lg bg-white text-ink p-3 text-sm'
                }
            }) }}
            {{ form_errors(form.oldPassword) }}
        </div>

        <div>
            {{ form_label(form.newPassword, 'Nouveau mot de passe', {
                'label_attr': {'class': 'block text-leather font-semibold text-sm mb-1'}
            }) }}
            {{ form_widget(form.newPassword, {
                'attr': {
                    'class': 'w-full border border-bookmark rounded-lg bg-white text-ink p-3 text-sm'
                }
            }) }}
            {{ form_errors(form.newPassword) }}
        </div>

        <div class="pt-2">
            <button type="submit"
                    class="bg-leather hover:bg-[#6f442a] text-white px-6 py-2 rounded-lg shadow transition font-semibold text-sm">
                Mettre à jour
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
