{% extends 'home/base_home.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-8 p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Changer de mot de passe</h1>

        <p class="text-gray-700 mb-4">
            Mettez à jour votre mot de passe pour sécuriser votre compte.
        </p>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.oldPassword, 'Ancien mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.oldPassword, {'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}}) }}
            {{ form_errors(form.oldPassword) }}
        </div>

        <div>
            {{ form_label(form.newPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
            {{ form_widget(form.newPassword, {'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}}) }}
            {{ form_errors(form.newPassword) }}
        </div>

        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600">
            Mettre à jour
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
