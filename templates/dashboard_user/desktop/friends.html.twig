<ul class="bg-parchment border border-bookmark rounded-xl shadow-sm divide-y divide-bookmark">
    {% for friend in friends %}
        <li class="friend-item flex justify-between items-center px-4 py-3" data-friend-id="{{ friend.id }}">
            <a href="{{ path('dashboard_user_profile_other', {'username': friend.username}) }}"
               class="flex items-center gap-3 group">
                <img src="{{ asset(friend.avatarPath|default('/images/default-profile.png')) }}"
                     alt="Avatar de {{ friend.username }}"
                     class="w-10 h-10 rounded-full border border-bookmark shadow">
                <span class="text-leather font-semibold group-hover:underline">{{ friend.username }}</span>
            </a>
            <button class="remove-friend-btn bg-leather hover:bg-[#6f442a] text-white px-3 py-1 rounded-lg text-sm shadow transition"
                    data-friend-id="{{ friend.id }}"
                    aria-label="Supprimer l'amitiÃ© de {{ friend.username }}">
                Supprimer
            </button>
        </li>
    {% else %}
        <li class="text-center text-bookmark italic py-4 text-sm">Aucun ami pour le moment.</li>
    {% endfor %}
</ul>
