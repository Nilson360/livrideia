{% extends '../../home/base_home.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 px-4 py-6 bg-parchment border border-bookmark shadow rounded-xl">
        <h1 class="text-3xl font-bold text-leather italic mb-4">Modifier mon profil</h1>
        <p class="text-ink mb-6 text-sm leading-relaxed">
            Mettez à jour vos informations personnelles. Assurez-vous qu'elles sont exactes et à jour.
        </p>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.fullName, 'Nom complet', {'label_attr': {'class': 'block text-leather font-semibold text-sm mb-1'}}) }}
            {{ form_widget(form.fullName, {
                'attr': {
                    'class': 'w-full border border-bookmark rounded-lg bg-white text-ink p-3 text-sm'
                }
            }) }}
            {{ form_errors(form.fullName) }}
        </div>

        <div>
            {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'block text-leather font-semibold text-sm mb-1'}}) }}
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'w-full border border-bookmark rounded-lg bg-white text-ink p-3 text-sm'
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        <div>
            {{ form_label(form.birthday, 'Date de naissance', {'label_attr': {'class': 'block text-leather font-semibold text-sm mb-1'}}) }}
            {{ form_widget(form.birthday, {
                'attr': {
                    'class': 'w-full border border-bookmark rounded-lg bg-white text-ink p-3 text-sm'
                }
            }) }}
            {{ form_errors(form.birthday) }}
        </div>

        <div class="pt-2">
            <button type="submit"
                    class="bg-leather hover:bg-[#6f442a] text-white px-6 py-2 rounded-lg shadow transition font-semibold text-sm">
                Enregistrer
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
