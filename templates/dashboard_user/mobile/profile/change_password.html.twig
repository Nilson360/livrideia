{% extends 'home/mobile/base.mobile.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block content %}
    <div class="bg-gray-50 min-h-screen">
        {# Header moderne avec navigation #}
        <div class="bg-white border-b border-gray-200 p-4 sticky top-0 z-10">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <button onclick="history.back()" class="p-2 mr-3 active:bg-gray-100 rounded-full transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center">
                        <svg class="w-5 h-5 text-gray-700" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
                        </svg>
                    </button>
                    <div>
                        <h1 class="text-lg font-bold text-gray-800">Mot de passe</h1>
                        <p class="text-sm text-gray-500">Sécurisez votre compte</p>
                    </div>
                </div>
                <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-red-600 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="p-4 space-y-6">
            {# Information de sécurité #}
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-200">
                <div class="flex items-start">
                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                        <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-bold text-blue-800 mb-2">Conseils de sécurité</h3>
                        <p class="text-blue-700 text-sm leading-relaxed">
                            Choisissez un mot de passe fort avec au moins 8 caractères, incluant des majuscules, minuscules, chiffres et symboles.
                        </p>
                    </div>
                </div>
            </div>

            {{ form_start(form, {'attr': {'id': 'password-form', 'class': 'space-y-6'}}) }}

            {# Formulaire de changement de mot de passe #}
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                <h3 class="font-bold text-gray-800 mb-6 flex items-center">
                    <svg class="w-5 h-5 text-red-500 mr-2" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
                    </svg>
                    Modifier le mot de passe
                </h3>

                <div class="space-y-5">
                    {# Ancien mot de passe #}
                    <div>
                        {{ form_label(form.oldPassword, 'Ancien mot de passe', {
                            'label_attr': {'class': 'block text-gray-700 font-semibold text-sm mb-2'}
                        }) }}
                        <div class="relative">
                            {{ form_widget(form.oldPassword, {
                                'attr': {
                                    'class': 'w-full border-2 border-gray-200 rounded-xl p-4 text-sm focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all pl-12 pr-12',
                                    'placeholder': 'Tapez votre ancien mot de passe',
                                    'id': 'old-password'
                                }
                            }) }}
                            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
                            </svg>
                            <button type="button" onclick="togglePasswordVisibility('old-password', this)" class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 active:text-gray-600">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                </svg>
                            </button>
                        </div>
                        {{ form_errors(form.oldPassword) }}
                    </div>

                    {# Nouveau mot de passe #}
                    <div>
                        {{ form_label(form.newPassword, 'Nouveau mot de passe', {
                            'label_attr': {'class': 'block text-gray-700 font-semibold text-sm mb-2'}
                        }) }}
                        <div class="relative">
                            {{ form_widget(form.newPassword, {
                                'attr': {
                                    'class': 'w-full border-2 border-gray-200 rounded-xl p-4 text-sm focus:ring-2 focus:ring-[#FF8A00] focus:border-[#FF8A00] transition-all pl-12 pr-12',
                                    'placeholder': 'Créez un mot de passe sécurisé',
                                    'id': 'new-password',
                                    'oninput': 'checkPasswordStrength(this.value)'
                                }
                            }) }}
                            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
                            </svg>
                            <button type="button" onclick="togglePasswordVisibility('new-password', this)" class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 active:text-gray-600">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                </svg>
                            </button>
                        </div>
                        {{ form_errors(form.newPassword) }}

                        {# Indicateur de force du mot de passe #}
                        <div class="mt-3">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-xs font-medium text-gray-600">Force du mot de passe</span>
                                <span id="password-strength-text" class="text-xs font-medium text-gray-500">Faible</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div id="password-strength-bar" class="bg-red-500 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
                            </div>
                            <div class="mt-2 space-y-1">
                                <div id="criteria-length" class="flex items-center text-xs text-gray-500">
                                    <svg class="w-3 h-3 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                    </svg>
                                    Au moins 8 caractères
                                </div>
                                <div id="criteria-upper" class="flex items-center text-xs text-gray-500">
                                    <svg class="w-3 h-3 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                    </svg>
                                    Une majuscule
                                </div>
                                <div id="criteria-number" class="flex items-center text-xs text-gray-500">
                                    <svg class="w-3 h-3 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                    </svg>
                                    Un chiffre
                                </div>
                                <div id="criteria-special" class="flex items-center text-xs text-gray-500">
                                    <svg class="w-3 h-3 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                    </svg>
                                    Un caractère spécial
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Boutons d'action #}
            <div class="flex space-x-3 pb-8">
                <button type="button" onclick="history.back()"
                        class="flex-1 border-2 border-gray-300 text-gray-700 py-4 rounded-2xl font-semibold active:scale-95 transition-transform">
                    Annuler
                </button>
                <button type="submit" id="submit-btn"
                        class="flex-1 bg-gradient-to-r from-[#FF8A00] to-[#e67300] text-white py-4 rounded-2xl font-semibold shadow-lg active:scale-95 transition-transform">
                    <svg class="w-5 h-5 inline mr-2" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
                    </svg>
                    Mettre à jour
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        // Fonction pour basculer la visibilité du mot de passe
        function togglePasswordVisibility(inputId, button) {
            const input = document.getElementById(inputId);
            const isPassword = input.type === 'password';

            input.type = isPassword ? 'text' : 'password';

            // Changer l'icône
            button.innerHTML = isPassword ?
                `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>
                </svg>` :
                `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                </svg>`;

            // Feedback tactile
            if (navigator.vibrate) {
                navigator.vibrate(50);
            }
        }

        // Fonction pour vérifier la force du mot de passe
        function checkPasswordStrength(password) {
            const strengthBar = document.getElementById('password-strength-bar');
            const strengthText = document.getElementById('password-strength-text');

            let score = 0;
            let strength = 'Faible';
            let color = 'bg-red-500';

            // Vérifications des critères
            const hasLength = password.length >= 8;
            const hasUpper = /[A-Z]/.test(password);
            const hasNumber = /\d/.test(password);
            const hasSpecial = /[!@#$%^&*(),.?":{}|<>]/.test(password);

            // Mise à jour des critères visuels
            updateCriteria('criteria-length', hasLength);
            updateCriteria('criteria-upper', hasUpper);
            updateCriteria('criteria-number', hasNumber);
            updateCriteria('criteria-special', hasSpecial);

            // Calcul du score
            if (hasLength) score++;
            if (hasUpper) score++;
            if (hasNumber) score++;
            if (hasSpecial) score++;

            // Détermination de la force
            switch(score) {
                case 0:
                case 1:
                    strength = 'Faible';
                    color = 'bg-red-500';
                    break;
                case 2:
                    strength = 'Moyen';
                    color = 'bg-yellow-500';
                    break;
                case 3:
                    strength = 'Bon';
                    color = 'bg-blue-500';
                    break;
                case 4:
                    strength = 'Excellent';
                    color = 'bg-green-500';
                    break;
            }

            // Mise à jour de l'interface
            strengthBar.className = `h-2 rounded-full transition-all duration-300 ${color}`;
            strengthBar.style.width = `${(score / 4) * 100}%`;
            strengthText.textContent = strength;
            strengthText.className = `text-xs font-medium ${color.replace('bg-', 'text-')}`;
        }

        // Fonction pour mettre à jour les critères
        function updateCriteria(criteriaId, isValid) {
            const criteria = document.getElementById(criteriaId);
            const icon = criteria.querySelector('svg');

            if (isValid) {
                criteria.classList.remove('text-gray-500');
                criteria.classList.add('text-green-600');
                icon.innerHTML = '<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>';
                icon.setAttribute('fill', 'currentColor');
                icon.removeAttribute('stroke');
            } else {
                criteria.classList.remove('text-green-600');
                criteria.classList.add('text-gray-500');
                icon.innerHTML = '<circle cx="12" cy="12" r="10"/>';
                icon.setAttribute('stroke', 'currentColor');
                icon.setAttribute('fill', 'none');
                icon.setAttribute('stroke-width', '2');
            }
        }

        // Animation d'apparition des sections
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.bg-white, .bg-gradient-to-r');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    section.style.transition = 'all 0.4s ease-out';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 150);
            });

            // Focus automatique sur le premier champ
            const firstInput = document.getElementById('old-password');
            if (firstInput) {
                setTimeout(() => firstInput.focus(), 500);
            }
        });

        // Gestion de l'envoi du formulaire
        document.getElementById('password-form').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submit-btn');
            submitBtn.innerHTML = `
                <svg class="w-5 h-5 inline mr-2 animate-spin" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z"/>
                </svg>
                Mise à jour...
            `;
            submitBtn.disabled = true;
        });

        // Feedback tactile
        if (navigator.vibrate) {
            document.querySelectorAll('button, input[type="password"]').forEach(element => {
                element.addEventListener('click', () => {
                    navigator.vibrate(50);
                });
            });
        }
    </script>
{% endblock %}