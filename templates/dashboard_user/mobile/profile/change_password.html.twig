{% extends 'home/mobile/base.mobile.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block content %}
    <div class="p-4">
        <div class="flex items-center mb-4">
            <a href="{{ path('dashboard_user_profile') }}" class="mr-2">
                <svg class="w-6 h-6 text-[#FF8A00]" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                     stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1 class="text-xl font-bold">Changer de mot de passe</h1>
        </div>

        <p class="text-gray-500 text-sm mb-4">
            Pour renforcer la sécurité de votre compte, veuillez choisir un mot de passe fort et unique.
        </p>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(form.oldPassword, 'Ancien mot de passe', {
                'label_attr': {'class': 'block text-gray-700 font-medium text-sm mb-1'}
            }) }}
            {{ form_widget(form.oldPassword, {
                'attr': {
                    'class': 'w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-[#FF8A00] focus:border-[#FF8A00]'
                }
            }) }}
            {{ form_errors(form.oldPassword) }}
        </div>

        <div>
            {{ form_label(form.newPassword, 'Nouveau mot de passe', {
                'label_attr': {'class': 'block text-gray-700 font-medium text-sm mb-1'}
            }) }}
            {{ form_widget(form.newPassword, {
                'attr': {
                    'class': 'w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-[#FF8A00] focus:border-[#FF8A00]'
                }
            }) }}
            {{ form_errors(form.newPassword) }}
        </div>

        <div class="pt-4">
            <button type="submit" class="w-full bg-[#FF8A00] text-white py-3 rounded-lg font-semibold">
                Mettre à jour
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}