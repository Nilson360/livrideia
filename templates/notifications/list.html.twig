{% extends 'base.html.twig' %}

{% block title %}Mes notifications{% endblock %}

{% block main_content %}
    <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-6 mt-6">
        <h1 class="text-3xl font-bold text-green-600 mb-6">üîî Mes notifications</h1>

        {% if notifications is not empty %}
            <ul class="space-y-4">
                {% for notification in notifications %}
                    <li class="p-4 rounded-lg shadow-sm {% if not notification.isRead %}bg-gray-100{% else %}bg-white{% endif %}">
                        <div class="flex flex-col sm:flex-row sm:justify-between gap-3">
                            <div class="flex-1 space-y-1">
                                <p class="text-gray-800 text-sm leading-6">
                                    {% if notification.type == 'friend_request' %}
                                        üë• <span class="font-medium">Demande d'amiti√© :</span>
                                        {{ notification.message }}
                                        {% if notification.sender %}
                                            <a href="{{ linkGenerator.toProfile(notification.sender) }}"
                                               class="text-green-600 hover:underline ml-1">Voir le profil</a>
                                        {% endif %}

                                    {% elseif notification.type == 'friend_accept' %}
                                        ‚úÖ <span class="font-medium">Amiti√© accept√©e :</span>
                                        {{ notification.message }}
                                        {% if notification.sender %}
                                            <a href="{{ linkGenerator.toChat(notification.sender) }}"
                                               class="text-blue-600 hover:underline ml-1">Ouvrir le chat</a>
                                        {% endif %}

                                    {% elseif notification.type == 'new_post' %}
                                        üìù <span class="font-medium">Nouveau post :</span>
                                        {{ notification.message }}
                                        {% if notification.post %}
                                            <a href="{{ linkGenerator.toPost(notification.post) }}"
                                               class="text-indigo-600 hover:underline ml-1">Voir le post</a>
                                        {% endif %}

                                    {% elseif notification.type == 'post_like' %}
                                        ‚ù§Ô∏è <span class="font-medium">Like :</span>
                                        {{ notification.message }}
                                        {% if notification.post %}
                                            <a href="{{ linkGenerator.toPost(notification.post) }}"
                                               class="text-indigo-600 hover:underline ml-1">Voir le post</a>
                                        {% endif %}

                                    {% elseif notification.type == 'post_comment' %}
                                        üí¨ <span class="font-medium">Commentaire :</span>
                                        {{ notification.message }}
                                        {% if notification.post %}
                                            <a href="{{ linkGenerator.toPost(notification.post) }}"
                                               class="text-indigo-600 hover:underline ml-1">Voir le post</a>
                                        {% endif %}

                                    {% else %}
                                        üìå <span class="font-medium">Notification :</span>
                                        {{ notification.message }}
                                    {% endif %}
                                </p>

                                {% if notification.type == 'friend_request' and notification.friendRequest is defined %}
                                    <form method="post"
                                          action="{{ path('notification_friend_response', {'id': notification.friendRequest.id}) }}"
                                          class="flex flex-wrap gap-3 mt-2">
                                        <button name="action" value="accept"
                                                class="bg-green-500 text-white px-4 py-1 rounded text-sm hover:bg-green-600">
                                            Accepter
                                        </button>
                                        <button name="action" value="reject"
                                                class="bg-red-500 text-white px-4 py-1 rounded text-sm hover:bg-red-600">
                                            Refuser
                                        </button>
                                    </form>
                                {% endif %}
                            </div>

                            <div class="text-right sm:text-end space-y-2 sm:min-w-[150px] flex flex-col items-end justify-between">
                                <p class="text-xs text-gray-500">{{ notification.createdAt|date('d/m/Y H:i') }}</p>

                                {% if not notification.isRead %}
                                    <form method="post"
                                          action="{{ path('notification_mark_as_read', {'id': notification.id}) }}">
                                        <button type="submit" class="text-blue-500 text-sm hover:underline">‚úì Marquer
                                            comme lue
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-center text-gray-600 mt-6">üì≠ Aucune notification pour le moment.</p>
        {% endif %}
    </div>
{% endblock %}
