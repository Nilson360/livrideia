<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-gray-100 min-h-screen flex flex-col" data-user-id="{{ app.user ? app.user.id : '' }}">

<!-- Barre de navigation -->
<nav class="bg-white shadow-md fixed w-full z-10 top-0">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo / Nom du site -->
            <div class="flex-shrink-0 flex items-center">
                <a href="{{ path('app_home') }}" class="text-xl font-bold text-green-500">
                    {% block site_name %}Livrideia{% endblock %}
                </a>
            </div>
            <!-- Icônes de navigation centrées -->
            <div class="hidden md:flex md:items-center md:justify-center md:space-x-10 flex-1">
                <!-- Accueil -->
                <a href="{{ path('app_home') }}" class="text-gray-700 hover:text-green-500 text-sm flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 576 512">
                        <path d="M575.8 255.5c0 18-15 32.1-32 32.1l-32 0 .7 160.2c0 2.7-.2 5.4-.5 8.1l0 16.2c0 22.1-17.9 40-40 40l-16 0c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1L416 512l-24 0c-22.1 0-40-17.9-40-40l0-24 0-64c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32 14.3-32 32l0 64 0 24c0 22.1-17.9 40-40 40l-24 0-31.9 0c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2l-16 0c-22.1 0-40-17.9-40-40l0-112c0-.9 0-1.9 .1-2.8l0-69.7-32 0c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"/>
                    </svg>
                </a>

                <!-- Notifications -->
                <a href="{{ path('notifications_list') }}" class="relative flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-gray-700 hover:text-green-500" viewBox="0 0 448 512">
                        <path d="M224 0c-17.7 0-32 14.3-32 32l0 19.2C119 66 64 130.6 64 208l0 18.8c0 47-17.3 92.4-48.5 127.6l-7.4 8.3c-8.4 9.4-10.4 22.9-5.3 34.4S19.4 416 32 416l384 0c12.6 0 24-7.4 29.2-18.9s3.1-25-5.3-34.4l-7.4-8.3C401.3 319.2 384 273.9 384 226.8l0-18.8c0-77.4-55-142-128-156.8L256 32c0-17.7-14.3-32-32-32z"/>
                    </svg>
                    <span id="notif-badge" class="absolute -top-1 -right-2 bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded-full hidden">3</span>
                </a>

                <!-- Messages -->
                <a href="{{ path("app_chat")}}" class="text-gray-700 hover:text-green-500 text-sm flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-8 text-gray-700 hover:text-green-500" viewBox="0 0 448 512">
                        <path d="M256.6 8C116.5 8 8 110.3 8 248.6c0 72.3 29.7 134.8 78.1 177.9 8.4 7.5 6.6 11.9 8.1 58.2A19.9 19.9 0 0 0 122 502.3c52.9-23.3 53.6-25.1 62.6-22.7C337.9 521.8 504 423.7 504 248.6 504 110.3 396.6 8 256.6 8zm149.2 185.1l-73 115.6a37.4 37.4 0 0 1 -53.9 9.9l-58.1-43.5a15 15 0 0 0 -18 0l-78.4 59.4c-10.5 7.9-24.2-4.6-17.1-15.7l73-115.6a37.4 37.4 0 0 1 53.9-9.9l58.1 43.5a15 15 0 0 0 18 0l78.4-59.4c10.4-8 24.1 4.5 17.1 15.6z"/>
                    </svg>
                </a>

                <!-- Profil -->
                {% if app.user %}
                    <a href="{{ path('dashboard-user-profile') }}" class="text-gray-700 hover:text-green-500 text-sm flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 448 512">
                            <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512l388.6 0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z"/>
                        </svg>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    <script>
        // Toggle du menu mobile
        document.getElementById('mobile-menu-button').addEventListener('click', function () {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</nav>

<!-- Contenu principal de la page -->
<div class="flex justify-center pt-16 flex-grow">
    <div class="max-w-7xl w-full flex">
        {% block sidebar_left %}{% endblock %}
        {% block main_content %}{% endblock %}
        {% block sidebar_right %}{% endblock %}
        {% block posts %}{% endblock %}
    </div>
</div>

<!-- Footer -->
<footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-col sm:flex-row justify-between items-center">
            <div>
                <p class="text-lg font-bold text-green-500">Livrideia</p>
                <p class="text-sm">© {{ "now"|date("Y") }} Livrideia. Tous droits réservés.</p>
            </div>
            <div class="flex flex-wrap gap-4 mt-4 sm:mt-0">
                <a href="{{ path('app_terms_of_service') }}" class="text-gray-300 hover:text-green-500 text-sm">Conditions d'utilisation</a>
                <a href="{{ path('app_privacy_policy') }}" class="text-gray-300 hover:text-green-500 text-sm">Politique de confidentialité</a>
                <a href="{{ path('app_contact') }}" class="text-gray-300 hover:text-green-500 text-sm">Contact</a>
                <a href="{{ path('app_about') }}" class="text-gray-300 hover:text-green-500 text-sm">À propos</a>
            </div>
        </div>
    </div>
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
